<header>
  <style>
    #TinyAppHead {
      animation: appear 10s infinite;
      animation-direction: alternate;
      filter:saturate(100%);
      filter:contrast(100%);
    }
    @keyframes appear {
      from {filter: hue-rotate(0deg);}
      to {filter: hue-rotate(45deg);}
    }
  </style>
  <nav id="TinyAppHead" class="navbar navbar-expand-md navbar-dark bg-success" style="border-bottom: 4px outset #77aa77;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation" style="border: 6px outset #99cc99; opacity: 0.8;">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div style="border:6px outset #99cc99; border-radius:10px 4px; padding:2px; background: rgba(0,128,0,0.5); opacity: 0.6;">
     <% if (!user) { %>

    <a href ="/login" class="btn btn-outline-light">Login </a>
    <a href ="/register" class="btn btn-outline-light">Register </a>
  
  <%} else { %>
  <h6 style="color-scheme: dark dark; color: #fff; margin:3px; font-weight: 600;"> Logged In as: <%= user.email %></h6>
  <form method="POST" action="/logout" style="text-align: center; padding:5px;">
    <input type="submit" class="btn btn-outline-dark" value="logout">
  </form>
  <% } %>
    </div>
  </nav>
</header>
